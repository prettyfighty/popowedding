<div class="container mx-auto">
  <div class="flex-wrap mt-16 mx-8">
    <h1 class="my-16 text-center text-3xl font-black text-gray-500">新人註冊</h1>
    <% if @user.errors.any? %>
      <div class="max-w-md mx-auto border-gray-300 border bg-blue-50 mb-8 -mt-6">
        <ul class="px-4 py-2">
          <% @user.errors.full_messages.each do |msg| %>
            <li class="text-gray-400 font-semibold">
              <span class="font-black text-2xl">．</span>
              <%= "#{msg.split(' ')[0]}：#{msg.split(' ')[1]}" %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="">
      <%= form_for @user, url: sign_up_users_path, html: { class: 'max-w-md mx-auto' } do |f| %>
        <div class="form-group text-xl mb-5">
          <div><%= f.label :bride, '新娘：', class: 'w-max text-base' %></div>
          <div><%= f.text_field :bride, placeholder: 'ex: 小白', class: 'border-2 p-2 w-full' %></div>
        </div>
        <div class="form-group text-xl mb-5">
          <div><%= f.label :bridegroom, '新郎：', class: 'w-max text-base' %></div>
          <div><%= f.text_field :bridegroom, placeholder: 'ex: 蠟筆小新', class: 'border-2 p-2 w-full' %></div>
        </div>
        <div class="form-group text-xl mb-5">
          <div><%= f.label :username, '帳號：', class: 'w-max text-base' %></div>
          <div><%= f.text_field :username, placeholder: 'ex: username', class: 'border-2 p-2 w-full' %></div>
        </div>
        <div class="form-group text-xl mb-5">
          <div><%= f.label :password, '密碼：', class: 'w-max text-base' %></div>
          <div><%= f.password_field :password, placeholder: 'ex: password', class: 'border-2 p-2 w-full' %></div>
        </div>
        <div class="form-group text-xl mb-5">
          <div><%= f.label :password_confirmation, '確認密碼：', class: 'w-max text-base' %></div>
          <div><%= f.password_field :password_confirmation, placeholder: 'ex: password', class: 'border-2 p-2 w-full' %></div>
        </div>
        <div class="form-group text-xl">
          <%= f.button '送出註冊', class: 'w-max mr-3 p-2 bg-gray-700 text-white rounded-lg' %>
          <%= link_to '返回登入頁', sign_in_sessions_path, class: "mx-3 p-2 border border-gray-400 text-gray-700 rounded-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
