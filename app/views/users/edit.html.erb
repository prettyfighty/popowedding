<div class="container mx-auto">

  <h1 class="mb-3 text-center fw-bold">編輯新人資料</h1>

  <div class="d-flex justify-content-center align-items-center">
    <div class="user-form-container mt-5 border border-dark p-5">
      <%= simple_form_for @user do |f| %>
        <div class="avatar text-center mb-3">
          <label class="upload-avatar-label rounded-circle overflow-hidden">
            <%= (@user.avatar?) ? image_tag(@user.avatar_url, size: "170x170", id: "userAvatar") : image_tag("/images/default_avatar.png", size: "170x170", id: "userAvatar") %>
            <%= f.input :avatar, as: :file, label: false, input_html: {class: "upload-avatar-input"} %>
          </label>
        </div>
        <%= f.input :email, disabled: true, label: t("email"), input_html: {class: "form-control"} %>
        <%= f.input :password, label: t("password"), input_html: {class: "form-control"} %>
        <%= f.input :password_confirmation, label: %Q(<abbr title="required">*</abbr> #{t("confirm_password")}).html_safe, input_html: {class: "form-control"} %>
        <%= f.button :submit, t("confirm"), class: "btn btn-danger my-3" %>
        <%= link_to t("back_to_mission_list"), missions_path, class: "btn btn-outline-danger mx-3" %>
      <% end %>
    </div>
  </div>

</div>
