<div class="container mx-auto md:container md:mx-auto">
  <div class="flex-wrap mt-16 mx-8"></div>
    <h1 class="my-16 text-center text-3xl font-black text-gray-500">新人登入</h1>
    <div class="">
      <%= form_tag sign_in_sessions_path, class: 'max-w-md mx-8 lg:mx-auto' do %>
        <div class="form-group text-xl mb-5">
          <div><%= label_tag :username, "帳號：", class: 'w-max' %></div>
          <div><%= text_field_tag :username, nil, placeholder: "username", class: 'border-2 p-2 w-full' %></div>
        </div>
        <div class="form-group text-xl mb-5">
          <div><%= label_tag :password, "密碼：", class: 'w-max' %></div>
          <div><%= password_field_tag :password, nil, placeholder: "password", class: 'border-2 p-2 w-full' %></div>
        </div>
        <div class="form-group text-xl">
          <%= button_tag "登入", class: 'w-max mr-3 p-2 bg-gray-700 text-white border border-double' %>
          <%= link_to '註冊', sign_up_users_path, class: "mx-3 p-2 border border-gray-400 text-gray-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
